/**index.wxss**/
.search-wrapper{
  position: relative;
  height: 80rpx;
  width: 100%;
  background-color: #F8F8F8;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;  
}

.search-section{
  position: relative;
  width: 94%;
  height: 80%;
  border: 3rpx solid #EBEBEB;
  border-radius:0.2em;
  background-color: #fff;
  order: 2;
}

.search-info{
  position: absolute;
  height: 80%;
  width: 30%;
  bottom: 0rpx;
  order: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search-text{
  color: #C4C3C8;
  font-size: 70%;
  margin-left: 6rpx;
}

.search-plan{
  height: 15rpx;
  width: 100%;
  background-color: #F8F8F8;
}

.daily-content{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.daily-content-item{
  position: relative;
  height: 380rpx;
  width: 85%;
  background: goldenrod;
  margin: 4rpx;
}

.daily-content-item image{
  height: 100%;
  width: 100%;
}
.daily-content-text{
  position: absolute;
  bottom: 50%;
  width: 100%;
  height: 30%;
  background-color: red;
  display: flex;
  flex-direction: column;
}
.daily-content-text-header{
  position: relative;
  font-size: 100%;
  left: 4%;
  background-color: green;
}

.daily-content-text-info{
  position: relative;
  font-size: 65%;
  left: 8%;
  background-color: gray;
}